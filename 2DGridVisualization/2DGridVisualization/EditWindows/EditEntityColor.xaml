<Window x:Class="_2DGridVisualization.EditWindows.EditEntityColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2DGridVisualization.EditWindows"
        mc:Ignorable="d"
        Title="Edit Color" Height="130" Width="235"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Background="#4A4A4A">
        <Label Content="Entity Color" Foreground="White" HorizontalContentAlignment="Center"/>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="Entity Color = " Foreground="White" HorizontalContentAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <ComboBox Name="cmbColor" Width="130" Margin="0,5,0,0"/>
            </StackPanel>

        </StackPanel>
        <Button x:Name="btnEditColor" Content="Edit Color"  Margin="10" Click="btnEditColor_Click" />
    </StackPanel>
</Window>
